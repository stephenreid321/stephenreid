<div class="mt-5">
  <% if params[:q] %>
    <p class="lead text-center">Showing <%= pluralize @posts.count, 'article'%></p>
  <% end %>
  <% if params[:term] %>
    <p class="lead text-center">Showing <%= pluralize @posts.count, 'article'%> tagged <a class="badge badge-primary" href="/terms/<%=params[:term]%>"><%=params[:term]%></a></p>
  <% end %>
  <% if params[:source_id] && params[:sink_id] %>
    <p class="lead text-center">Showing <%= pluralize @posts.count, 'article'%> tagged <a class="badge badge-primary" href="/terms/<%=@source['Name']%>"><%=@source['Name']%></a> and <a class="badge badge-primary" href="/terms/<%=@sink['Name']%>"><%=@sink['Name']%></a></p>
  <% end %>
  <% if params[:organisation] %>
    <p class="lead text-center">Showing <%= pluralize @posts.count, 'article'%> published by <a class="badge badge-primary" href="/organisations/<%=params[:organisation]%>"><%=params[:organisation]%></a></p>
  <% end %>
  <%= partial :search %>
</div>