<script>
  $(function() {
    $('#toc').toc({
      'container': '#books',
      'selectors': 'h2'
    });
  })
</script>
<% opts = 'cover_size=medium&hide_link=&hide_title=true' %>


<div class="row">
  <div class="col-lg-2">
    <div class="d-none d-lg-block" id="toc"></div>
