<p class="lead">
  Films I appreciate,
  last updated <%= time_ago_in_words Time.parse(Film.all(sort: { 'Created at' => 'desc'}).first['Created at']) %> ago
</p>

<div class="row">
  <% Film.all(sort: {'Year' => 'desc'}).each { |film| %>
  <div class="col-6 col-lg-3 mb-3">
    <%= partial :film, locals: { film: film } %>
  </div>
  <% } %>
</div>
