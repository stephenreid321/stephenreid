<div class="row justify-content-center">
  <div class="col-lg-9">
    <p class="mt-3 text-center">
      <em class="text-contrast">Short bio in the third person</em>
    </p>
    <div>
      <%= md :bio %>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-lg-auto text-center">
    <p class="lead">
      Since you've come this far, I'd love to stay in touch.
    </p>
    <p>
      <a target="_blank" class="btn btn-primary btn-lg" href="https://stephenreid.substack.com/">Subscribe to my newsletter</a>
    </p>
  </div>
</div>

<%= partial :course %>

<div class="text-center">
  <h2 class="mt-5 mb-4" id="ancestry">Ancestry</h2>
</div>
<%= partial :ancestry %>

<h2 class="mt-5 mb-3" id="training">Training and teachers</h2>
<div>
  <%= md :training %>
</div>


<h2 class="mt-5" id="speaking">Recent speaking engagements</h2>
<dl class="row">
  <% SpeakingEngagement.all(filter: '{Hidden} = 0', sort: { 'Date' => 'desc' }).first(5).each { |speaking_engagement| %>
  <%= partial :speaking_engagement, object: speaking_engagement %>
  <% } %>
</dl>

<p>
  <a href="/speaking-engagements">View all speaking engagements &rarr;</a>
</p>


<h2 class="mt-5" id="feedback">Feedback on my courses</h2>
<p class="mb-3">
  <a href="https://dandelion.earth/u/stephenreid321">Check out my Dandelion profile</a>
</p>
<iframe style="overflow: scroll; border: 0; height: 100vh; width:100%;" id="dandelion-feedback" src="https://dandelion.earth/u/stephenreid321/feedback?minimal=true&hide_pictures=1"></iframe>
<script>
  $(function() {
       $('#dandelion-feedback').iFrameResize({log: true, checkOrigin: false, heightCalculationMethod : 'taggedElement'})
  })
</script>

<h2 class="mt-5" id="previous-affiliations">Previous affiliations</h2>
<ul>
  <% Affiliation.all(filter: "{Current} = ''", sort: { 'Order' => 'asc' }).each { |affiliation| %>
  <li>
    <% if affiliation.fields['Organisation'] %>
      <a href="<%= affiliation.organisation['URL'] %>"><%= affiliation.organisation['Name'] %></a>,
    <% end %>
    <%= affiliation['Position'] %>
  </li>
  <% } %>
</ul>

<h2 class="mt-5" id="research">Peer-reviewed research</h2>
<dl class="row">
  <% Paper.all.shuffle.each { |paper| %>
  <dt class="col-lg-3"><%= date = Date.parse(paper['Date']); date.strftime('%b %Y') %>,
    <%= paper['Journal'] %></dt>
  <dd class="col-lg-9">
    <a href="<%= paper['URL'] %>"><%= paper['Name'] %></a>
  </dd>
  <% } %>
</dl>

<h2 class="mt-5" id="speaking">Places and plans</h2>
<%= partial :places %>
