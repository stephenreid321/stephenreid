<p class="lead">
  <a href="/books">
    &larr; All books
  </a>
</p>

<style>
  .book-summary {
    font-size: 1rem;
    line-height: 1.5;
  }
</style>

<div class="row justify-content-center">
  <div class="col-6 col-lg-3">

    <a target="_blank" href="https://www.goodreads.com/book/show/<%=@book['Book Id']%>">
      <img src="<%= @book['Cover image'][0]['url'] %>" class="w-100 mb-3">
    </a>

  </div>
  <div class="col-lg-9">

    <h2 class="regular mb-3">
      <%=@book['Title']%>
      <br / >
      <small class="text-muted">
        by <%=[@book['Author'],@book['Additional Authors']].select { |a| !a.blank? }.to_sentence%></small>
    </h2>

    <div class="book-summary">

      <p>
        <a target="_blank" href="https://www.goodreads.com/book/show/<%=@book['Book Id']%>">
          <i class="fab fa-goodreads"></i> Goodreads
        </a>
      </p>

      <% markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML.new(hard_wrap: true), autolink: true, tables: true) %>
      <%== markdown.render(@book['Summary'].split("\n\n")[1..-1].join("\n\n")) %>
    </div>

  </div>

</div>
